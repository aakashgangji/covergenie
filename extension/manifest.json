{
    "manifest_version": 3,
    "name": "CoverGenie",
    "version": "1.0",
    "description": "Generate tailored cover letters with one click!",
    "permissions": ["activeTab", "scripting", "tabs"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }